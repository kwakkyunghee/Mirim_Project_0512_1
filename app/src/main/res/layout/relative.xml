<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/base_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="전호번호"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/base_text"
        android:layout_alignBaseline="@+id/base_text"
        android:textSize="20sp"
        android:hint="000-0000-0000"/>
    <Button
        android:id="@+id/base_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/base_text"
        android:layout_alignParentRight="true"
        android:text="취소"
        android:backgroundTint="#8AAE8A"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="@color/black"
        android:layout_below="@+id/base_text"
        android:layout_toLeftOf="@+id/base_reset"
        android:layout_marginTop="10dp"
        android:text="입력"
        android:backgroundTint="#8AAE8A"/>



</RelativeLayout>